{
  "name": "react-native-event",
  "version": "0.2.4",
  "description": "React context for subscribing to all react native interaction events",
  "keywords": ["react-native", "react", "native", "outside", "press", "touch", "typescript"],
  "repository": "kmalakoff/react-native-event",
  "license": "MIT",
  "author": "Kevin Malakoff <kmalakoff@gmail.com> (https://github.com/kmalakoff)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.mjs",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": "./*"
  },
  "main": "dist/cjs/index.js",
  "unpkg": "dist/umd/react-native-event.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsds build",
    "coverage": "tsds link && cross-env NODE_OPTIONS=--experimental-vm-modules jest test/**/*.test.* --collect-coverage",
    "deploy": "tsds deploy",
    "format": "biome check --apply-unsafe src/ test/",
    "test": "tsds link && cross-env NODE_OPTIONS=--experimental-vm-modules jest jest test/**/*.test.*",
    "test:engines": "nvu engines npm test",
    "version": "tsds version"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/jest": "^29.5.12",
    "@types/react": "18.0.15",
    "@types/react-native": "^0.69.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "react": "18.0.0",
    "react-native": "0.69.3",
    "react-test-renderer": "18.0.0",
    "ts-dev-stack": "^0.9.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "engines": {
    "node": ">=14"
  },
  "tsds": {
    "source": "src/index.ts",
    "globals": {
      "react": "React",
      "react-native": "ReactNative"
    }
  }
}
